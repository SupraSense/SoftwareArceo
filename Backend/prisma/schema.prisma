datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

model TipoTarea {
  id     Int    @id @default(autoincrement())
  nombre String @unique
}

model Client {
  id          String          @id @default(uuid())
  razonSocial String
  cuit        String          @unique
  direccion   String
  statusId    String
  status      ClientStatus    @relation(fields: [statusId], references: [id])
  contacts    ClientContact[]
  contracts   Contract[]
}

model Personal {
  id            Int            @id @default(autoincrement())
  nombre        String
  apellido      String
  email         String         @unique
  telefono      String?
  areaId        Int
  area          AreaPersonal   @relation(fields: [areaId], references: [id])
  statusId      Int
  status        PersonalStatus @relation(fields: [statusId], references: [id])
  fecha_ingreso DateTime
  created_at    DateTime       @default(now())
  updated_at    DateTime       @updatedAt
}

model PersonalStatus {
  id       Int        @id @default(autoincrement())
  nombre   String     @unique
  personal Personal[]
}

model AreaPersonal {
  id       Int        @id @default(autoincrement())
  nombre   String     @unique
  personal Personal[]
}

model ClientStatus {
  id      String   @id @default(uuid())
  name    String   @unique
  clients Client[]
}

model ClientContact {
  id       String  @id @default(uuid())
  clientId String
  client   Client  @relation(fields: [clientId], references: [id])
  name     String
  phone    String?
  email    String?
}

model Contract {
  id       String  @id @default(uuid())
  clientId String
  client   Client  @relation(fields: [clientId], references: [id])
  isActive Boolean @default(true)
}

model User {
  id        String  @id 
  email     String  @unique
  firstName String?
  lastName  String?
  dni       String?
  address   String?
  role      String?
}